---
import '../styles/styles.css';
import '../styles/website.css';
import { currentUser } from '../utils';

interface Props {
	title: string;
	center?: boolean;
}

const { title, center } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/icon.png" />
		<meta name="description" content="Blankstorm is a free Sandbox/RTS game. Command your own fleet of starships and explore the galaxy!" />
		<meta name="author" content="Dr. Vortex" />
		<meta name="keywords" content="vortex,blankstorm,game,space" />
		<meta name="page-topic" content="Gaming" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Blankstorm Docs</title>
		<slot name="in-header" />
		<style>
			.center-content {
				position: absolute;
				left: 25%;
				width: 50%;
				text-align: center;
			}

			#nav-main {
				padding-top: 2%;
				font-size: 1.05em;
			}
		</style>
	</head>
	<body>
		<nav>
			<a href="/" id="nav-main"><strong>Blankstorm Docs</strong></a>
			<a href="/api" target="_blank" class="sub-menu">Rest API</a>
		</nav><br /><br />
		{
			center ? (
				<div class="center-content">
					<slot />
				</div>
			) : (
				<slot />
			)
		}
	</body>
</html>
